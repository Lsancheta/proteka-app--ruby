<h1>Novo Checklist</h1>

<%= form_with model: @checklist do |f| %>
<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
</div>

<div class="form-group">
    <p>Selecione quais tarefas ir√° realizar! </p>
    <%= f.label :tarefas %><br>
    <% @tarefa.each do |tarefa| %>
        <%= f.check_box :tarefa_ids, {multiple: true }, tarefa.id, nil %>
        <%# check_box_tag "checklist[tarefa_ids]", tarefa.id %>
        <%= tarefa.titulo %><br>
    <% end %>
</div>

<%= f.submit "Criar Checklist", class: "btn btn-primary" %>
<% end %>