<h1>Roteiros</h1>
<div>
<%= link_to "Novo Roteiro", new_roteiro_path %>
</div>
<table>
    <thead>
        <tr>
            <th>Roteiro</th>
            <th>Posto</th>
        </tr>
    </thead>
    <tbody>
        <% @roteiros.each do |roteiro| %>
            <tr>
                <td><%= roteiro.nome %><% roteiro.inspect %></td>
                <td><%= roteiro.posto.cliente %></td>
                
                <td><%= link_to "Editar", edit_roteiro_path(roteiro) %></td>
                <td><%= link_to 'Deletar', roteiro, method: :delete, data: {confirm: 'Tem certeza que quer excluir o roteiro?' }%></td>
            <tr>
        <% end %>
    </tbody>
</table>