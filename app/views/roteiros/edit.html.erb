<h1>Editar Roteiro</h1>

<%= form_for @roteiro, url: roteiro_path(@roteiro), method: :patch do |form| %>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
<br>
    <%= form.label :posto_id %>
    <%= form.collection_select :posto_id, Posto.all, :id, :cliente, selected: @posto.id %>
<br>
    <%= form.label :usuarios_selecionados, "Usuarios Selecionados" %>
    <%  @usuarios_selecionados.each do |usuario| %>
    <br>
        <%= usuario.nome%><br>
    <% end %>
<br>
    <%= form.label :usuarios_disponiveis, "Usuarios DisponÃ­veis" %>
    <%= form.collection_select :usuario_ids, @usuarios_disponiveis, :id, :nome, {include_hidden: false }, multiple: true, class: 'select2' %>
<br>
    <%= form.submit %>
<% end %>