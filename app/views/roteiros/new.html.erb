<h1>Novo Roteiro</h1>

<%= form_with model: @roteiro, url: roteiros_path do |form| %>
  <%= form.label :nome %>
  <%= form.text_field :nome %>

  <%= form.label :usuario_id %>
  <%= form.collection_select(:usuario_id, @usuarios, :id, :nome, prompt: true) %>

  <%= form.label :posto_id %>
  <%= form.collection_select(:posto_id, @postos, :id, :cliente, promt: true) %>

  <div id="usuarios">
    <%= form.fields_for :usuarios do |usuario_form| %>
      <%= render 'usuario_fields', f: usuario_form %>
    <% end %>
  </div>
  <div class="actions">
    <%= link_to_add_fields 'Add User', roteiros_path, 'usuarios' do |f| %>
      <%= render 'usuario_fields', f: f %>
    <% end %>
  </div>
  <%= form.submit %>
<% end %>
